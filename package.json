    "@tailwindcss/vite": "^4.0.14",
    "axios": "^1.8.3",
    "formik": "^2.4.6",
    "react": "^19.0.0",
    "react-doc-viewer": "^0.1.14",
    "react-dom": "^19.0.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-pdf": "^9.2.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.3.0",
